package templates

import (
	"fmt"
	. "todo.app/models"
)

templ TodoRow(todo Todo) {
		<li id={fmt.Sprintf("todo-row-%d", todo.Id)} class={GetTodoRowClass(todo)}>
				<div class="flex items-center justify-between">
						<div class="flex items-center">
								<div>
										@TodoCheckbox(todo)
										@TodoLabel(todo)
										@TodoCompletedAtLabel(todo)
								</div>
						</div>
						@TrashIcon(todo)
				</div>
		</li>
}
